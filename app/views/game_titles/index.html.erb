<%= render "shared/header" %>

<div class='item-contents'>
  <div class='title'>
    <h1>ピックアップカテゴリー</h1>
  </div>
  <div class="post_title">
    <%= link_to "投稿", new_game_title_path, class: :game__title %>
  </div>
  <div class="card__wrapper">
    <% @game_title.each do |game_title| %>
    <div class="card">
      <%= link_to image_tag(game_title.image, class: :card__img), "#" %>
      <div class="card__body">
        <%= link_to game_title.game_title, "#", class: :card__title %>
      </div>
    </div>
    <% end %>
  </div>
<%= render "shared/footer" %>
</div>


